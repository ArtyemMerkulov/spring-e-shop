<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="spring-e-shop-v1" author="A.P. Merkulov">

        <createTable tableName="role">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="user">
            <column name="uuid" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="varchar(256)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="patronymic" type="varchar(128)"/>
            <column name="phone" type="varchar(14)">
                <constraints unique="true"/>
            </column>
            <column name="address" type="varchar(1024)"/>
            <column name="balance" type="varchar(20)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="user_roles">
            <column name="user_uuid" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_user_roles"
                             foreignKeyName="fk_user_role_user_uuid" references="user(uuid)"/>
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_user_roles"
                             foreignKeyName="fk_user_role_role_id" references="role(id)"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="category">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="product">
            <column name="uuid" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="category_id" type="int">
                <constraints foreignKeyName="fk_product_category_id" references="category(id)"/>
            </column>
            <column name="price" type="numeric(16,2)">>
                <constraints nullable="false"/>
            </column>
            <column name="weight" type="numeric(10,4)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)" defaultValue="">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="int"/>
            <column name="active" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_product_user_uuid" references="user(uuid)"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="order">
            <column name="uuid" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_uuid" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_order_user_uuid" references="user(uuid)"/>
            </column>
            <column name="phone" type="varchar(14)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="varchar(1024)"/>
            <column name="status" type="numeric(2)">>
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="order_item">
            <column name="uuid" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="order_uuid" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_order_item_order_uuid" references="order(uuid)"/>
            </column>
            <column name="title" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="numeric(16,2)">
                <constraints nullable="false"/>
            </column>
            <column name="weight" type="numeric(10,4)">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>